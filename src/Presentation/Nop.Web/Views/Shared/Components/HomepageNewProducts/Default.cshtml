@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
	<div class="new-wrap pad-norm">
		<div class="title text-center">
			<h3 class="">@T("NewProducts")</h3>
			<button class="btn btn-sm btn-blue-white float-right d-none d-md-block" id="new-products-view-all">@T("NewProducts.ViewAll")</button>
		</div>
		<div class="slider-wrap clearfix">
			@foreach (var item in Model)
			{
				@await Html.PartialAsync("_ProductBox", item)
			}
		</div>
	</div>
	<script>
		$("#new-products-view-all").on("click", function () {
			window.location.replace("@Url.RouteUrl("newproducts")");
		});
	</script>
}
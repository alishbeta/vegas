@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
	<div class="sell-wrap pad-norm">
		<div class="title text-center">
			<h3 class="">@T("Bestsellers")</h3>
			<button class="btn btn-sm btn-blue-white float-right" id="bestsellers-view-all">@T("Bestsellers.ViewAll")</button>
		</div>
		<div class="scrollComtent clearfix">
			<div class="scrollingHotSpotLeft" style="display: none;">
				<div class="arrow"></div>
			</div>
			<div class="scrollingHotSpotRight" style="display: none;">
				<div class="arrow"></div>
			</div>
			<div class="scrollWrapper">
				<div class="scrollableArea clearfix">
					@foreach (var item in Model)
					{
						@await Html.PartialAsync("_ProductBox", item)
					}
				</div>
			</div>
		</div>
	</div>
<script>
	$("#bestsellers-view-all").on("click", function () {
		window.location.replace("@Url.RouteUrl("BestSellers")");
	});
</script>
}

@model NewsItemModel
@{
	Layout = "_ColumnsOne";

	//title
	Html.AddTitleParts(!string.IsNullOrEmpty(Model.MetaTitle) ? Model.MetaTitle : Model.Title);
	//meta
	Html.AddMetaDescriptionParts(Model.MetaDescription);
	Html.AddMetaKeywordParts(Model.MetaKeywords);
	//page class
	Html.AppendPageCssClassParts("html-news-item-page");
}
<nav class="breadcrumb-wrap" aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="/">Bed4you</a></li>
		<li class="breadcrumb-item"><a href="/news">@T("news.list")</a></li>
		<li class="breadcrumb-item active"><a href="#">@T("news.item")</a></li>
	</ol>
</nav>
<div class="row news">
	<div class="col-md-12 col-lg-12 offset-xl-1 col-xl-9">
		<div class="news-full-wrap">
			<h1 class="title">@Model.Title <span class="date">@Model.CreatedOn.ToString("D")</span></h1>
			<div class="img-wrap">
                <img src="@Model.Image" >
			</div>
			<div class="text">
				@Html.Raw(Model.Full)
			</div>
		</div>
	</div>
</div>
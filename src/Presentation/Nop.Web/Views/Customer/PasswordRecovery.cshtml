@model PasswordRecoveryModel
@{
	Layout = "_ColumnsOne";

	//title
	Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
	//page class
	Html.AppendPageCssClassParts("html-password-recovery-page");
}
<nav class="breadcrumb-wrap" aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="#">Bed4you</a></li>
		<li class="breadcrumb-item active">@T("breadcrumb.recovery")</li>
	</ol>
</nav>
<div class="row reg">
	<div class="col-sm-10 col-md-8 offset-md-1 offset-lg-1 col-lg-7 offset-xl-1 col-xl-7">
		<h1 class="title">@T("Account.PasswordRecovery")</h1>
		<div class="reg-wraper rounded">
			@if (!string.IsNullOrEmpty(Model.Result))
			{
				<div class="result">
					@Model.Result
				</div>
			}
			<form asp-route="PasswordRecovery" method="post">
				<div asp-validation-summary="ModelOnly" class="message-error"></div>
				<div class="title">
					<strong>@T("Account.PasswordRecovery.Tooltip")</strong>
				</div>
				<div class="form-fields">
					<div class="form-group row">
						<label asp-for="Email" asp-postfix=":" class="col-form-label col-sm-3" for="i3">E-mail</label>
						<input asp-for="Email" id="i3" type="text" class="form-control col-sm-4" autofocus="autofocus" />
						<span asp-validation-for="Email"></span>
					</div>
				</div>
				<div class="row">
					<input type="submit" name="send-email" class="btn btn-blue pl-5 pr-5 offset-sm-3 col-sm-4" value="@T("Account.PasswordRecovery.RecoverButton")" />
				</div>
			</form>
		</div>
	</div>
</div>

@model SEOTemplateModel

@{
    Layout = AdminViewLocations.AdminLayoutViewPath;
}

@{
    Html.SetActiveMenuItemSystemName("SevenSpikes.NopSmartSEO.Admin.Submenus.SmartSEOTemplates");
}

<form method="post" id="ribbon-form">
    <nop-antiforgery-token />

    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("SevenSpikes.NopSmartSEO.Admin.NopSmartSEO.EditSmartSEOTemplateDetails")
            <small><i class="fa fa-arrow-circle-left"></i> - @Model.Name @Html.ActionLink("(" + T("SevenSpikes.NopSmartSEO.Admin.NopSmartSEO.BackToList") + ")", "List")</small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue save-settings-button">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue save-settings-button">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="smart-seo-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>

    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>

<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="smart-seo-delete" />